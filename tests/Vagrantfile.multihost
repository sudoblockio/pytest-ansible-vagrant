Vagrant.configure("2") do |config|
  config.vm.box = "alvistack/ubuntu-24.10"

  config.vm.define "web" do |web|
    web.vm.hostname = "web"
    web.vm.provider "libvirt" do |lv|
      lv.memory = 512
      lv.cpus = 1
    end
  end

  config.vm.define "db" do |db|
    db.vm.hostname = "db"
    db.vm.provider "libvirt" do |lv|
      lv.memory = 512
      lv.cpus = 1
    end
  end
end
